{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "rootDir": ".",
        "baseUrl": ".",
        "paths": {
            "@modules/*": ["./src/modules/*"],
            "@config/*": ["./src/config/*"],
            "@shared/*": ["./src/shared/*"],
            "@utils/*": ["./src/utils/*"],
        },
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true
    }
}